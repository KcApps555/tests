<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/behind_weather_fragment"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:src="@null"
        android:background="@null"
        android:visibility="gone"/>
    <Button
        android:id="@+id/weather_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/behind_weather_fragment"
        android:text="מזג אוויר"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/main_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/weather_btn"
        android:gravity="bottom">
        <Button
            android:id="@+id/reminder_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg3"
            android:text="תזכורת"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/font_btn"/>
        <Button
            android:id="@+id/business_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg2"
            android:text="עסקים"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/font_btn"/>
        <Button
            android:id="@+id/technology_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg1"
            android:text="טכנולוגיה"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/font_btn"/>
        <Button
            android:id="@+id/news_btn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_general"
            android:layout_gravity="top"
            android:text="כללי"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/font_btn"/>
    </LinearLayout>
    <!--<android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:menu="@menu/bottom_navigation">

    </android.support.design.widget.BottomNavigationView>-->


</RelativeLayout>