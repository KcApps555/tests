<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="150dp"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorPrimaryLight">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.noamkeisy.taskno2.CustomImageView
            android:id="@+id/pic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:background="@null"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp">
            <com.victor.loading.rotate.RotateLoading
                android:id="@+id/rotateloading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:loading_width="5dp"
                app:loading_color="#ffffff"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/pic_null_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ללא תמונה"
                android:textSize="16sp"
                android:textColor="@color/font_btn"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/pic"
            android:layout_marginStart="5dp"
            android:text="לתקציר..."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/link"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/pic"
            android:layout_above="@+id/date"
            android:layout_alignParentTop="true"
            android:text="כותרת"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="3dp"
                android:text="08.04.2019   18:37"
                android:textSize="12sp"
                android:textColor="@color/gray"/>
            <ImageView
                android:id="@+id/date_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/time_24dp"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>